<div class="container">
  <%= render "partials/adminDashBoard" %>

  <h3 id="titleHeader">Projects</h3>

  <!-- ============ FIRST EDIT BOX ============ -->
  <div class="offset-md-1 col-md-8">
    <!-- <h3 id="titleHeader">General Information</h3> -->
    <div class="card">
      <div class="card-header">
        Projects
      </div>
      <div class="card-block">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Github</th>
              <th>Site</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td><%= project.github %></td>
              <td><%= project.site %></td>
              <td><%= project.description %></td>
              <td>
                <button type="button" class="btn pinkColour editButton" data-toggle="modal" data-target="#projectInfoEdit">
                  Edit
                </button>
              </td>
              <td>
                <%= button_to "Delete", project, :method => :delete, class: "btn pinkColour editButton" %>
              </td>
            </tr>
          </tbody>

          <!-- MODAL FOR EDIT -->
          <div class="modal fade" id="projectInfoEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <!-- this is the x close button at the top right hand corner of modal -->
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <h4 class="modal-title" id="myModalLabel">Project Details</h4>
                </div>
                <!-- ============ FORM ============ -->
                <%= form_for(project) do |f| %>

                  <div class="modal-body">
                    <div class="form-group row field">
                        <%= f.label :name, class: "col-xs-3 col-form-label" %>
                        <%= f.text_field :name, value: project.name, class: 'col-xs-8'%>
                    </div>
                    <div class="form-group row field">
                        <%= f.label :github, class: "col-xs-3 col-form-label" %>
                        <%= f.text_field :github, value: project.github, class: 'col-xs-8'%>
                    </div>
                    <div class="form-group row field">
                        <%= f.label :site, class: "col-xs-3 col-form-label" %>
                        <%= f.text_field :site, value: project.site, class: 'col-xs-8'%>
                    </div>
                    <div class="form-group row field">
                        <%= f.label :description, class: "col-xs-3 col-form-label" %>
                        <%= f.text_area :description, value: project.description, class: 'col-xs-8'%>
                    </div>

                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn pinkColour">Save changes</button>
                  </div>
                <!-- ============ FORM END ============ -->
                <%end%>
              </div>
            </div>
          </div>
            <!-- ============ MODAL EDIT END ============ -->



          <% end %>
        </table>

      </div>


    </div>


  </div>

</div>
