
  <div class="form-signin" id="login_form">
    <!--<h2 class="form-signin-heading">Please sign in</h2>-->
    <%= form_for :student do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Enter your email", class:"form-control" %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Enter your password", class:"form-control" %>
        <br>
        <br>
        <div id="submit-button"><%= f.submit "Login" %></div>
    <% end %>
  </div>
  
  <div id="login-right">
    <img id="login-right-pic" src="http://i.imgur.com/nTbLEfV.png"></img>
  </div>
  
  
