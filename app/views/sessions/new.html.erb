

<div class="container loginButton">
  <img id="logoSize" src="/assets/public/galogo.png"/>
</div>
  <div class="form-signin form-group" id="login_form">
    <!--<h2 class="form-signin-heading">Please sign in</h2>-->
    <%= form_for :student do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "example@email.com", class:"form-control loginPage" %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "password", class:"form-control loginPage" %>
        <br>
        <br>
        <div class="loginButton">
          <%= f.submit "Login", class:"btn pinkColour loginPage", id:"submit-button"%>
        </div>
    <% end %>
  </div>

  <div id="login-right">
    <img id="login-right-pic" src="http://i.imgur.com/nTbLEfV.png"></img>
  </div>


