<p id="notice"><%= notice %></p>

<h1>Works</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% if current_student.admin%>
      <% @works.each do |work| %>
        <tr>
          <td><%= work.company %></td>
          <td><%= work.title %></td>
          <td><%= work.start %></td>
          <td><%= work.end %></td>
          <td><%= work.description %></td>
          <td><%= link_to 'Show', work %></td>
          <td><%= link_to 'Edit', edit_work_path(work) %></td>
          <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <% elsif current_student%>
        <% @student.works.each do |work| %>
        <td><%= work.company %></td>
        <td><%= work.title %></td>
        <td><%= work.start %></td>
        <td><%= work.end %></td>
        <td><%= work.description %></td>
        <td><%= link_to 'Show', work %></td>
        <td><%= link_to 'Edit', edit_work_path(work) %></td>
        <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% end %>

    <% end %>

  </tbody>
</table>

<br>

