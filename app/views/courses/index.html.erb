<div class="container">
  <%= render "partials/adminDashBoard" %>

  <h3 id="titleHeader">Courses</h3>

  <!-- ============ FIRST EDIT BOX ============ -->
  <div class="offset-md-1 col-md-8">
    <!-- <h3 id="titleHeader">General Information</h3> -->
    <div class="card">
      <div class="card-header">
        Courses
      </div>
      <div class="card-block">
        <table>
          <thead>
            <tr>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.name %></td>
              <td>
                <button type="button" class="btn pinkColour editButton" data-toggle="modal" data-target="#courseInfoEdit">
                  Edit
                </button>
              </td>
              <td>
                <%= button_to "Delete", course, :method => :delete, class: "btn pinkColour editButton" %>
              </td>
            </tr>
          </tbody>

          <!-- MODAL FOR EDIT -->
          <div class="modal fade" id="courseInfoEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <!-- this is the x close button at the top right hand corner of modal -->
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <h4 class="modal-title" id="myModalLabel">Course Details</h4>
                </div>
                <!-- ============ FORM ============ -->
                <%= form_for(course) do |f| %>

                  <div class="modal-body">
                    <div class="form-group row field">
                        <%= f.label :name, class: "col-xs-3 col-form-label" %>
                        <%= f.text_field :name, value: course.name, class: 'col-xs-8'%>
                    </div>

                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn pinkColour">Save changes</button>
                  </div>
                <!-- ============ FORM END ============ -->
                <%end%>
              </div>
            </div>
          </div>
            <!-- ============ MODAL EDIT END ============ -->


            <!-- MODAL FOR DESTROY -->
            <div class="modal fade" id="courseInfoEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <!-- this is the x close button at the top right hand corner of modal -->
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Course Details</h4>
                  </div>
                  <!-- ============ FORM ============ -->
                  <%= form_for(course) do |f| %>

                    <div class="modal-body">
                      <div class="form-group row field">
                          <%= f.label :name, class: "col-xs-3 col-form-label" %>
                          <%= f.text_field :name, value: course.name, class: 'col-xs-8'%>
                      </div>

                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <button type="submit" class="btn pinkColour">Save changes</button>
                    </div>
                  <!-- ============ FORM END ============ -->
                  <%end%>
                </div>
              </div>
            </div>
              <!-- ============ MODAL DESTROY END ============ -->

          <% end %>
        </table>

      </div>


    </div>

    <!-- ============ CREATE NEW COURSE ============ -->
    <div class="container">
      <button type="button" class="btn pinkColour editButton createNew" data-toggle="modal" data-target="#createNewEntry">
        Create New Course
      </button>
    </div>
    <!-- MODAL -->
    <div class="modal fade" id="createNewEntry" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">New Entry</h4>
          </div>
          <!-- ============ FORM ============ -->

          <% course = @course %>
          <%= form_for(course) do |f| %>
          <div class="modal-body">
            <div class="form-group row field">
              <%= f.label :name, class: "col-xs-3 col-form-label" %>
              <%= f.text_field :name, class: 'col-xs-8'%>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= button_to "Create", course, :method => :create, class: "btn pinkColour editButton" %>
          </div>
          <% end %>
          <!-- ============ FORM END ============ -->
        </div>
      </div>
    </div>
      <!-- ============ MODAL END ============ -->


  </div>

</div>
